html(ng-app='geniuses')
  head
    title=title
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js')
    script(src="https://cdn.firebase.com/js/client/2.2.4/firebase.js")
    script(src='http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.0.min.js')
    script(src="https://cdn.firebase.com/libs/angularfire/1.1.2/angularfire.min.js")
    script(src='js/listAllgeniuses.js')
  body
    div.container
       div.page-header
        h1 Genius Info!
        form.genius-info-form.form-horizontal(role='form',ng-controller='GetOrUpdateGenius',name='geniusInfoForm')
            div.form-group
              label.col-sm-4 id
              div.col-sm-8
                input.form-control(type='text', name='geniusid', ng-model='user.geniusid', required='', ng-trim='false',id ='geniusid')
            div.form-group
              label.col-sm-4 Name
              div.col-sm-8
                input.form-control(type='text', name='geniusname', ng-model='user.geniusname', required='', ng-trim='false',id ='geniusname')
            div.form-group
              div.col-sm-offset-4.col-sm-8
                button.login.btn.btn-primary(type='submit',ng-click="saveGeniusInfo()") Save
            div.pull-right
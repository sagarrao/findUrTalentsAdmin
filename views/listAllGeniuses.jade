html(ng-app='geniuses')
  head
    title List All Geniuses!
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js')
    script(src="https://cdn.firebase.com/js/client/2.2.4/firebase.js")
    script(src='http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.0.min.js')
    script(src="https://cdn.firebase.com/libs/angularfire/1.1.2/angularfire.min.js")
    script(src='js/listAllgeniuses.js')
  body
    div.container
      div.page-header
       h2 All Geniuses!
        form.geniuses-form.form-horizontal(role='form',ng-controller='SearchAGenius',name='geniusesForm')
         div.form-group
            div.col-sm-8
               input(type='text', ng-model='selected|json', id ='selectedUser', style="display: none;" , name='selectedUser')
               input.form-control(placeholder='Genius',name='search-genius',ng-model="selected",typeahead="user as user.geniusname for user in usersArray | filter:{'geniusname':$viewValue} | limitTo:8")
            div.col-sm-8
            button.search.btn.btn-primary(ng-click="gotoAGenius()") Search
       div(ng-controller='GetAllGeniuses')
         ul
           li(ng-repeat='user in users') {{ user.geniusname }}
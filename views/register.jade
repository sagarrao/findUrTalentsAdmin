html
  head
    title=title
    link(
      href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
      rel='stylesheet'
    )
  body
    div.container

      div.page-header
        h1 Registering is easy!

      if errors
        each error in errors
          div.alert.alert-danger
            span #{error.error}
      if saved
        div.alert.alert-success
          span Your profile has been saved
      form.login-form.form-horizontal(method='post', role='form',action='/register')
        input(name='_csrf', type='hidden', value=csrfToken)
        div.form-group
          label.col-sm-4 Email
          div.col-sm-8
            input.form-control(placeholder='Email',
              required=true,
              name='email',
              type='email',
              value=email)
        div.form-group
          label.col-sm-4 Password
          div.col-sm-8
            input.form-control(placeholder='Password',
              required=true,
              name='password',
              type='password',
              value=password)
        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.login.btn.btn-primary(type='submit') Save
        div.pull-right
        if auth
          a(href="/?auth=#{auth}") Return to home page
        else
          a(href="/") Return to home page